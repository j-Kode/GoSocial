@model IEnumerable<GoSocial.Models.Posting>
<div class="modal fade" tabindex="-1" id="myModal" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Start Campaign</h4>
            </div>
            <form asp-controller="Home" asp-action="AddCampaign" method="post" class="form-horizontal" role="form">
                <div class="modal-body">

                    <div class="form-group row">
                        <label for="example-text-input" class="col-xs-3 col-form-label">Title</label>
                        <div class="col-xs-9">
                            <input class="form-control" asp-for="@Html.EditorForOrDefault().Title" type="text" placeholder="campaign title" id="campaignTitle">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="example-search-input" class="col-xs-3 col-form-label">Location</label>
                        <div class="col-xs-9">
                            <input class="form-control" type="search" placeholder="start typing city....." id="location">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="example-email-input" class="col-xs-3 col-form-label">Email</label>
                        <div class="col-xs-9">
                            <input class="form-control" type="email" placeholder="yourcampaign@email.com" id="email">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="example-url-input" class="col-xs-3 col-form-label">Followers</label>
                        <div class="col-xs-9">
                            <input class="form-control" type="number" placeholder="minimum required followers" id="minFollowers">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="example-tel-input" class="col-xs-3 col-form-label">Price</label>
                        <div class="col-xs-9">
                            <div class="input-group">
                                <div class="input-group-addon">$</div>
                                <input type="text" class="form-control"  id="exampleInputAmount" placeholder="Amount">
                                <div class="input-group-addon">.00</div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="example-url-input" class="col-xs-3 col-form-label">Description</label>
                        <div class="col-xs-9">
                            <textarea class="form-control"  id="description" placeholder="enter a campaign description" rows="3"></textarea>
                        </div>
                    </div>


                    <div style="clear:both"></div>

                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <input type="submit" value="AddCampaign" class="btn btn-primary" />
                </div>
            </form>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->